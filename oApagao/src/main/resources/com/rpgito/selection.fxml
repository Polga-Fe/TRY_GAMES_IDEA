<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/11.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    alignment="CENTER" spacing="20" fx:controller="com.rpgito.selectionPage">
    <VBox alignment="CENTER_RIGHT" spacing="10.0">
        <children>
            <Button fx:id="backButton" text="Voltar" />
        </children>
    </VBox>
    <HBox spacing="20.0" alignment="CENTER">
        <VBox spacing="10.0" alignment="CENTER">
            <ImageView fx:id="pinkMonsterImage" fitHeight="150.0" fitWidth="150.0" />
            <Label fx:id="pinkMonsterName" text="NOME: " />
            <Label fx:id="pinkMonsterHealth" text="VIDA: " />
            <Label fx:id="pinkMonsterMana" text="MANA: " />
            <Label fx:id="pinkMonsterAtk" text="ATAQUE: " />
            <Label fx:id="pinkMonsterDef" text="DEFESA: " />
            <Button fx:id="selectPinkMonsterButton" text="SELECIONAR " />
        </VBox>
        <VBox spacing="10.0" alignment="CENTER">
            <ImageView fx:id="owletMonsterImage" fitHeight="150.0" fitWidth="150.0" />
            <Label fx:id="owletMonsterName" text="NOME: " />
            <Label fx:id="owletMonsterHealth" text="VIDA: " />
            <Label fx:id="owletMonsterMana" text="MANA: " />
            <Label fx:id="owletMonsterAtk" text="ATAQUE: " />
            <Label fx:id="owletMonsterDef" text="DEFESA: " />
            <Button fx:id="selectOwletMonsterButton" text="SELECIONAR" />
        </VBox>
        <VBox spacing="10.0" alignment="CENTER">
            <ImageView fx:id="dudeMonsterImage" fitHeight="150.0" fitWidth="150.0" />
            <Label fx:id="dudeMonsterName" text="NOME: " />
            <Label fx:id="dudeMonsterHealth" text="VIDA: " />
            <Label fx:id="dudeMonsterMana" text="MANA: " />
            <Label fx:id="dudeMonsterAtk" text="ATAQUE: " />
            <Label fx:id="dudeMonsterDef" text="DEFESA: " />
            <Button fx:id="selectDudeMonsterButton" text="SELECIONAR" />
        </VBox>
    </HBox>
</HBox>
